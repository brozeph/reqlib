{
  "name": "reqlib",
  "version": "1.0.10",
  "description": "A library to simplify REST API requests and to provide utilities for handling common REST API consumer scenarios ",
  "main": "dist",
  "scripts": {
    "lint": "gulp lint",
    "posttest": "nyc report --reporter=text-lcov | coveralls",
    "prepare": "gulp build",
    "pretest": "gulp clean && gulp lint",
    "test": "NODE_ENV=test nyc mocha ./test/src",
    "test:unit": "NODE_ENV=test nyc mocha ./test/src"
  },
  "repository": {
    "type": "git",
    "url": "git+ssh://git@github.com/brozeph/reqlib.git"
  },
  "keywords": [
    "https",
    "rest",
    "api",
    "client",
    "request",
    "library"
  ],
  "author": "Joshua Thomas (github.com/brozeph)",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/brozeph/reqlib/issues"
  },
  "homepage": "https://github.com/brozeph/reqlib#readme",
  "nyc": {
    "all": true,
    "include": [
      "src"
    ],
    "instrument": false,
    "report-dir": "./reports",
    "reporter": [
      "lcov",
      "text",
      "text-summary"
    ],
    "require": [
      "@babel/register"
    ],
    "sourceMap": false
  },
  "dependencies": {
    "@babel/runtime-corejs2": "^7.11.2"
  },
  "devDependencies": {
    "@babel/cli": "^7.11.6",
    "@babel/core": "^7.11.6",
    "@babel/plugin-transform-runtime": "^7.11.5",
    "@babel/preset-env": "^7.11.5",
    "@babel/register": "^7.11.5",
    "babel-eslint": "^10.1.0",
    "babel-plugin-istanbul": "^6.0.0",
    "chai": "^4.2.0",
    "coveralls": "^3.1.0",
    "eslint-plugin-babel": "^5.3.1",
    "gulp": "^4.0.2",
    "gulp-babel": "^8.0.0",
    "gulp-clean": "^0.4.0",
    "gulp-eslint": "^6.0.0",
    "gulp-sourcemaps": "^2.6.5",
    "mocha": "^8.1.3",
    "nock": "^13.0.4",
    "nyc": "^15.1.0"
  }
}
